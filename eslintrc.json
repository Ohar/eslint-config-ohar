{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "modules": true
    }
  },

  "plugins": [
    "standard"
  ],

  "rules": {
    "camelcase": ["error", { "properties": "never", "ignoreDestructuring": true }],
    "comma-dangle": ["error", "always-multiline"],
    "indent": ["off", 2, { "SwitchCase": 1 }],
    "key-spacing": ["off", { "beforeColon": true, "afterColon": true }],
    "no-multi-spaces": "off"
  }
}
